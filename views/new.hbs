
<div class="max-w-3xl mx-auto mt-8 flex justify-start items-center">
    <a
        href="/posts"
        class="
            flex justify-between items-center text-slate-100 text-sm rounded-full 
            bg-slate-800 py-1 px-3 font-medium max-w-[90px]
            hover:bg-slate-900
            focus:ring-2 focus:ring-offset-2 focus:ring-slate-900 mr-2
            dark:hover:bg-slate-600
        "
    >
        <i class="fa-solid fa-chevron-left mr-1"></i>
        <p>Posts</p>
    </a>
    <a
        href="/posts/my-posts"
        class="
            flex justify-between items-center text-slate-100 text-sm rounded-full 
            bg-slate-800 py-1 px-3 font-medium max-w-[110px]
            hover:bg-slate-900
            focus:ring-2 focus:ring-offset-2 focus:ring-slate-900
            dark:hover:bg-slate-600
        "
    >
        <i class="fa-solid fa-chevron-left mr-1"></i>
        <p>Mis posts</p>
    </a>
</div>
<div 
    class="max-w-3xl bg-white shadow rounded mx-auto mt-2 dark:bg-slate-800"
>   
    <h2 class="text-lg font-medium leading-6 text-gray-700 my-3 border-b p-3 dark:text-slate-200 dark:border-b-slate-600">
        Crear nuevo posteo
    </h2>
    <form id="formNewPost">
        <div class="px-3 mt-3 flex flex-col group" id="error-title">
            <label for="title" class="font-medium text-slate-600 mb-1 text-sm dark:text-slate-100">Titulo:</label>
            <input 
                type="text" 
                id="title"
                placeholder="Titulo"
                name="title"
                class="
                    bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm text-slate-600
                    focus:ring-1 ring-slate-600 focus:outline-none focus:border-slate-600 text-sm
                    group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                    dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300 dark:text-slate-100
                "
            >
            <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-title"></span>
        </div>
        <div class="px-3 mt-3 flex flex-col group" id="error-body">
            <label for="body" class="font-medium text-slate-600 mb-1 text-sm dark:text-slate-100">Contenido:</label>
            <textarea 
                id="body" 
                name="body" 
                rows="10"
                type="text" 
                placeholder="Escriba aqui..."
                class="
                    bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm text-slate-600
                    focus:ring-1 ring-slate-600 focus:outline-none focus:border-slate-600 text-sm
                    group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                    dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300 dark:text-slate-100
                "
            ></textarea>
            <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-body"></span>
        </div>
        <div class="px-3 mt-3 flex flex-col relative group" id="error-url">
            <label for="url" class="font-medium text-slate-600 text-sm dark:text-slate-100" >URL:</label>
            <div class="flex">
                <span
                    class="inline-flex items-center rounded-l-md border border-r-0 border-gray-300 bg-gray-50 pl-3 pr-1 py-2 text-sm text-gray-500 truncate"
                >
                    http://posts.com/posts/  
                </span>
                <input 
                    type="text" 
                    id="url"
                    placeholder="mi-post"
                    name="url"
                    class="
                        bg-white pl-3 pr-20 py-2 border border-slate-300 rounded-r-md shadow-sm text-slate-600
                        focus:ring-1 ring-slate-600 focus:outline-none focus:border-slate-600 text-sm grow
                        group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                        dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300 dark:text-slate-100
                    "
                >
                
            </div>
            <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-url"></span>
            <button
                type="button"
                id="btn-autocomplete"
                class="
                    absolute right-4 text-sm font-medium rounded-full px-2 py-1 top-[25px]
                    bg-slate-700 text-white
                    hover:bg-slate-900 transition-all overflow-hidden
                    dark:bg-slate-100 dark:hover:bg-slate-200 dark:focus:ring-slate-200 dark:text-slate-900
                "
            >
                Auto: on
            </button>
        </div>
        <div class="px-3 mt-5 flex flex-col relative group" id="error-image">
            <img src="" alt="Imagen para post" id="image-url" class="hidden group-[.preview]:block object-contain max-h-96 mb-3">
            <div class="flex items-center justify-center">
                <div class="transition-all">
                    <label 
                        for="image"
                        class="
                            px-3 py-2 transition-all relative cursor-pointer rounded-full bg-slate-800 font-medium text-slate-100 text-sm hover:bg-slate-900 mr-2
                            dark:bg-slate-100 dark:hover:bg-slate-200 dark:focus:ring-slate-200 dark:text-slate-900
                        "
                    >
                        <span id="text-upload-image">Subir una imagen</span>
                        <input id="image" name="image" type="file" accept="image/*" class="sr-only">
                    </label>
                </div>
                <button
                    type="button"
                    id="btn-delete-preview"
                    class="
                        hidden
                        bg-slate-100 border-none rounded-full shadow-sm px-3 py-2
                        border-transparent text-center text-sm font-medium
                        hover:bg-slate-200
                        focus:ring-2 focus:ring-offset-2 focus:ring-slate-200
                        group-[.preview]:flex group-[.preview]:justify-between group-[.preview]:items-center
                    "
                >
                    <span>Borrar</span> 
                    <i class="fa-solid fa-xmark ml-2"></i>
                </button>
            </div>
            <span class="text-sm text-pink-500 hidden group-[.error]:block text-center mt-2" id="message-image"></span>
        </div>
        <div class="flex justify-end items-center px-3 border-t py-2 mt-5 dark:border-t-slate-600">
            <a 
                href="/posts"
                class="
                    mr-2 bg-slate-100 border-none rounded-md shadow-sm px-5 py-2
                    border-transparent text-center text-sm font-medium
                    hover:bg-slate-200
                    focus:ring-2 focus:ring-offset-2 focus:ring-slate-200
                    dark:bg-slate-600 dark:hover:bg-slate-800 dark:focus:ring-slate-800 dark:text-slate-100
                "
            >
                Cancelar
            </a>
            <button
                type="submit"
                class="
                    py-2 px-7 border-none rounded-md shadow-sm border-transparent bg-slate-800
                    text-center text-slate-100 text-sm
                    hover:bg-slate-900 font-medium
                    focus:ring-2 focus:ring-offset-2 focus:ring-slate-900 mr-2
                    dark:bg-slate-100 dark:hover:bg-slate-200 dark:focus:ring-slate-200 dark:text-slate-900
                "
            >
                Crear
            </button>
        </div>
    </form>
</div>

<script src="/js/posts.js"></script>
