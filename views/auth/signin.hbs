<div
    class="
        box-border max-w-md bg-white shadow rounded mx-auto p-3 my-20
        max-[500px]:rounded-none max-[500px]:max-w-screen-sm
        dark:bg-slate-800
    "
>
    <div>
        <h2 class="text-center text-lg font-medium leading-6 text-gray-700 my-3 dark:text-slate-200">
            Iniciar Sesión 
        </h2>
    </div>
    <form class="text-gray-700 text-sm dark:text-slate-200" id="formLogin">
        <div class="flex flex-col mt-5">
            <label for="email" class="font-medium">Correo:</label>
            <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="ejemplo@gmail.com"
                class="
                    bg-white px-3 py-2 border rounded-md shadow-sm mt-1 
                    focus:outline-none focus:ring-1 ring-slate-800 focus:border-slate-800
                    dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300
                "
                required
            >
        </div>
        <div class="flex flex-col mt-5">
            <label for="pass" class=" font-medium">Contraseña:</label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                placeholder="Contraseña"
                class="
                    bg-white px-3 py-2 border rounded-md shadow-sm mt-1 
                    focus:outline-none focus:ring-1 ring-slate-800 focus:border-slate-800
                    dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300
                "
                required
            >
        </div>
        <div class="mt-2 group" id="message-login">
            <div
                class="
                    bg-red-300/20 px-2 py-1 my-2 border border-red-500 rounded-md text-red-700 hidden 
                    group-[.error]:flex group-[.error]:justify-between group-[.error]:items-center
                    dark:text-white
                "
            >
                <i class="fa-solid fa-circle-exclamation text-lg"></i>
                <span id="message" class="text-center"></span>
                <i class="fa-solid fa-xmark text-lg px-1 hover:bg-red-300 cursor-pointer rounded-sm" id="message-cancel"></i>
            </div>
        </div>
        
        <button
            type="submit" 
            class="
                bg-slate-800 py-2 border-none rounded-md shadow-sm w-full border-transparent mt-2
                text-center text-slate-100
                hover:bg-slate-900 font-medium
                focus:ring-2 focus:ring-offset-2 focus:ring-slate-900
                dark:bg-slate-100 dark:hover:bg-slate-200 dark:focus:ring-slate-200 dark:text-slate-900
            "
        >
            Ingresar
        </button>
    </form>
</div>
