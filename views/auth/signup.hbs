<div
    class="
        box-border max-w-xl bg-white shadow rounded mx-auto p-3 my-20
        max-sm:rounded-none max-sm:max-w-screen-sm
        dark:bg-slate-800
    "
>
    <div>
        <h2 class="text-center text-lg font-medium leading-6 text-gray-700 my-3 dark:text-slate-200">
            Registrarse
        </h2>
    </div>
    <form class="text-gray-700 text-sm dark:text-slate-200" id="formRegister">
        <div class="flex flex-col mt-5 group" id="error-name">
            <label for="r-name" class="font-medium ">Nombre: *</label>
            <input 
                type="text" 
                name="name" 
                id="r-name"
                placeholder="Ingrese su nombre"
                class="
                    bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm mt-1 focus:outline-none focus:ring-1 ring-slate-800 focus:border-slate-800
                    group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                    dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300
                "
            >
            <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-name"></span>
        </div>
        <div class="flex flex-col mt-5 group" id="error-last">
            <label for="r-last" class="font-medium">Apellido: *</label>
            <input 
                type="text" 
                name="last" 
                id="r-last"
                placeholder="Ingrese su apellido"
                class="
                    bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm mt-1 focus:outline-none focus:ring-1 ring-slate-800 focus:border-slate-800
                    group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                    dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300
                "
            >
            <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-last"></span>
        </div>
        <div class="flex flex-col mt-5 group" id="error-email">
            <label for="r-email" class="font-medium">Correo: *</label>
            <input 
                type="email" 
                name="email" 
                id="r-email"
                placeholder="ejemplo@gmail.com"
                class="
                    bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm mt-1 focus:outline-none focus:ring-1 ring-slate-800 focus:border-slate-800
                    group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                    dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300
                "
            >
            <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-email"></span>
        </div>
        <div class="md:flex justify-start mt-5">
            <div class="flex flex-col grow md:mr-2 group" id="error-password">
                <label for="r-password" class="font-medium">Contraseña: *</label>
                <input 
                    type="password" 
                    name="password" 
                    id="r-password"
                    class="
                        bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm mt-1 focus:outline-none focus:ring-1 ring-slate-800 focus:border-slate-800
                        group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                        dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300
                    "
                >
                <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-password"></span>
            </div>
            <div class="flex flex-col grow max-md:mt-5 group" id="error-confirmPassword">
                <label for="r-confirmPassword" class="font-medium">Repetir contraseña: *</label>
                <input 
                    type="password" 
                    name="confirmPassword" 
                    id="r-confirmPassword"
                    class="
                        bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm mt-1 focus:outline-none focus:ring-1 ring-slate-800 focus:border-slate-800
                        group-[.error]:border-pink-500 group-[.error]:text-pink-600  group-[.error]:focus:ring-pink-500
                        dark:bg-slate-700 dark:ring-slate-300 dark:focus:border-slate-300
                    "
                >
                <span class="text-sm text-pink-500 hidden group-[.error]:block" id="message-confirmPassword"></span>
            </div>
        </div>
        <button
            type="submit" 
            class="
                bg-slate-800 py-2 border-none rounded-md shadow-sm w-full border-transparent mt-5
                text-center text-slate-100
                hover:bg-slate-900
                focus:ring-2 focus:ring-offset-2 focus:ring-slate-900
                dark:bg-slate-100 dark:hover:bg-slate-200 dark:focus:ring-slate-200 dark:text-slate-900
            ">
            Registrarse
        </button>
    </form>
</div>
