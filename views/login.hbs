<div
    class="box-border max-w-md bg-white shadow rounded mx-auto p-3 my-20"
>
    <div>
        <h2 class="text-center text-lg font-medium leading-6 text-gray-700 my-3">
            Iniciar Sesión 
        </h2>
    </div>
    <form action="#" method="POST" class="text-gray-700 text-sm">
        <div class="flex flex-col mt-5">
            <label for="email" class="font-medium">Correo:</label>
            <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="ejemplo@gmail.com"
                class="bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm mt-1"
            >
        </div>
        <div class="flex flex-col mt-5">
            <label for="pass" class=" font-medium">Contraseña:</label>
            <input 
                type="pass" 
                id="pass" 
                name="pass" 
                placeholder="Contraseña"
                class="bg-white px-3 py-2 border border-slate-300 rounded-md shadow-sm mt-1"
            >
        </div>
        <button
            type="submit" 
            class="
                bg-slate-800 py-2 border-none rounded-md shadow-sm mt-5 w-full border-transparent
                text-center text-slate-100
                hover:bg-slate-900
                focus:ring-2 focus:ring-offset-2 focus:ring-slate-800
            "
        >
            Ingresar
        </button>
    </form>
</div>